<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin_surface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_navy">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarEditTourLeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:title="Manajemen Tour Leader"
            app:subtitle="Kelola pemandu wisata profesional"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="#DDEBFF" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/tourLeaderScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:contentDescription="Konten halaman manajemen tour leader"
        android:fadeScrollbars="false"
        android:padding="24dp"
        android:paddingBottom="120dp"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"> <!-- PERBAIKAN DI SINI -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressTourLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                app:indicatorSize="48dp"
                app:trackCornerRadius="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTourLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_admin_form_card"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/txtTitleTourLeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:text="Tour Leader"
                        android:textColor="@color/brand_navy"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgTourLeader"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="Foto tour leader"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_admin_leader"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.SamiraTravel.RoundedXL" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Ubah Foto"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/brand_gold"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_admin_gallery"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconTint="@android:color/white" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Nama Tour Leader"
                        app:boxBackgroundColor="@color/samira_blue_50"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:hintEnabled="true"
                        app:startIconDrawable="@drawable/ic_admin_profile">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputNamaTourLeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Nomor Telepon"
                        app:boxBackgroundColor="@color/samira_blue_50"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:hintEnabled="true"
                        app:startIconDrawable="@drawable/ic_phone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputTeleponTourLeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditModeTourLeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="12dp"
                        android:text="Edit Data"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@color/brand_gold"
                        app:cornerRadius="20dp" />

                    <LinearLayout
                        android:id="@+id/layoutActionTourLeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelTourLeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:paddingVertical="12dp"
                            android:text="Batal"
                            android:textAllCaps="false"
                            android:textColor="@color/brand_text_primary"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_surface"
                            app:cornerRadius="20dp"
                            app:strokeColor="@color/card_stroke_blue"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveTourLeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="12dp"
                            android:textSize="12sp"
                            android:text="Simpan Perubahan"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            app:backgroundTint="@color/brand_navy"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_admin_package"
                            app:iconGravity="textStart"
                            app:iconPadding="16dp"
                            app:iconTint="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomAdminNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:background="@android:color/white"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/selector_admin_bottom_nav"
        app:itemTextColor="@color/selector_admin_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_admin_bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>