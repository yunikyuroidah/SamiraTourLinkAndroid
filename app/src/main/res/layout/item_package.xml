<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@android:color/transparent"
    android:stateListAnimator="@null">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="420dp"
        android:background="@drawable/bg_card_soft">

        <View
            android:layout_width="52dp"
            android:layout_height="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_accent_bar" />

        <TextView
            android:id="@+id/txtNamaPaket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Paket"
            android:textColor="@color/samira_blue_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/labelDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi:"
            android:textColor="@color/samira_blue_dark"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi paket"
            android:textSize="14sp"
            android:textColor="@color/brand_text_secondary"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/labelFasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fasilitas:"
            android:textColor="@color/samira_blue_dark"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtFasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brand_text_secondary"
            android:textSize="13sp"
            android:alpha="0.9"
            android:lineSpacingExtra="1dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/labelFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features:"
            android:textColor="@color/samira_blue_dark"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brand_text_secondary"
            android:textSize="13sp"
            android:alpha="0.9"
            android:lineSpacingExtra="1dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
