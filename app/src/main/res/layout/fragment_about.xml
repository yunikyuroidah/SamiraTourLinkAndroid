<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="24dp"
    android:scrollbars="vertical"
    android:fadeScrollbars="false">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp" app:cardElevation="4dp"> <VideoView
                android:id="@+id/aboutVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/aboutTitle"
                    android:text="Tentang Samira Travel"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#0A2540"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/aboutText"
                    android:text="Samira Travel hadir untuk melayani perjalanan ibadah Umrah dan Haji Anda dengan pelayanan terpercaya, fasilitas lengkap, dan bimbingan profesional berpengalaman."
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#444"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/whatsappButton"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_whatsapp_button"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:src="@drawable/whatsapp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:text="Konsultasi Gratis"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Didukung oleh:"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#111"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/sponsorImage"
                android:src="@drawable/sponsor"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>