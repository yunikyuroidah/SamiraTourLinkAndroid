<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_highlight">

            <View
                android:layout_width="48dp"
                android:layout_height="4dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_accent_bar" />

            <TextView
                android:text="Galeri Dokumentasi"
                android:textStyle="bold"
                android:textSize="21sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/brand_text_primary"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Potret kebahagiaan dan khidmatnya perjalanan ibadah jamaah kami di berbagai momen istimewa."
                android:fontFamily="sans-serif"
                android:textColor="@color/brand_text_secondary"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        android:scrollbars="vertical" />

</LinearLayout>
