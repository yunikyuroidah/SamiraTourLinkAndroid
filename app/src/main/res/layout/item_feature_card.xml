<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:stateListAnimator="@null"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/featureCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_soft"
        android:gravity="center_vertical"
        android:minHeight="120dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/featureIconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_feature_icon"
            android:padding="12dp">

            <ImageView
                android:id="@+id/featureIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_feature_people" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/featureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="2000+ Jamaah"
                android:textColor="@color/samira_blue_dark"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/featureSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1dp"
                android:text="Telah mendampingi lebih dari 2000 jamaah"
                android:textColor="@color/brand_text_secondary"
                android:textSize="11.5sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
