<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin_surface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brand_navy">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarEditPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:subtitle="Perbarui paket unggulan Anda"
            app:subtitleTextColor="#DDEBFF"
            app:title="Manajemen Paket Travel"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAdminPaket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="132dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddPaket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="88dp"
        android:text="Tambah Paket"
        app:icon="@android:drawable/ic_input_add"
        app:backgroundTint="@color/brand_gold"
        app:tint="@android:color/white"
        app:elevation="8dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomAdminNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:background="@android:color/white"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/selector_admin_bottom_nav"
        app:itemTextColor="@color/selector_admin_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_admin_bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>