<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9FAFB">

    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/hero_image_desc"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#60000000"
        app:layout_constraintBottom_toBottomOf="@id/heroImage"
        app:layout_constraintEnd_toEndOf="@id/heroImage"
        app:layout_constraintStart_toStartOf="@id/heroImage"
        app:layout_constraintTop_toTopOf="@id/heroImage" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="24dp"
        android:paddingEnd="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@id/heroImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/heroImage">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp" android:contentDescription="@string/app_logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/heroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="SAMIRA TRAVEL"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heroSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Sahabat Umroh &amp; Haji Keluarga Anda"
            android:textColor="#DDDDDD"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/heroHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Berpengalaman 15+ tahun mendampingi perjalanan ibadah yang aman dan nyaman."
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textSize="13sp"
            android:background="@drawable/bg_hero_chip" />

        <LinearLayout
            android:id="@+id/btnWhatsApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_whatsapp_button"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/whatsapp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungi via WhatsApp"
                android:textColor="#FFF"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>